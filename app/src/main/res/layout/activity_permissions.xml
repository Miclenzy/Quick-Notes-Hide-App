<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/permissions_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This app requires certain permissions to function correctly. Please grant the necessary permissions to continue."
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_grant_permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grant Permissions"
        android:layout_below="@id/permissions_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

</RelativeLayout>
